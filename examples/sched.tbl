@using("lib/std.tbl");

global n: u32 = 42;

task foo(n: &u32) {
    printf("Hello, foo %d\n", *n);
    *n = *n + 1;
    return;
}

task bar(n: &u32) {
    printf("Hello, bar %d\n", *n);
    *n = *n + 1;
    return;
}

task main() -> i32 
{
    schedule foo(&n);
    schedule bar(&n);
    return 0;
}
