@using("lib/std.tbl");

global n: u32 = 0;

task foo(n: &u32) {
    printf("Hello, foo %d\n", *n);
    if (*n < 4) {
        *n = *n + 1;
    } else {
        exit;
    }
    return;
}

task bar(n: &u32) {
    printf("Hello, bar %d\n", *n);
    return;
}

task main() -> i32
{
    schedule foo(&n);
    schedule bar(&n);
    return 0;
}